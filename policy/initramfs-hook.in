STATE_DIR=@DEB_CONFIGURE_LOCALSTATEDIR@/lib/@DEB_SOURCE_PACKAGE@


set -e

PREREQS="udev"

prereqs()
{
    echo "$PREREQS"
}

case "$1" in
    prereqs)
	prereqs
	exit 0
	;;
esac

. /usr/share/initramfs-tools/hook-functions

test -r $STATE_DIR/clean-files || exit 0

awk '{print $2}' $STATE_DIR/clean-files \
    | while read file; do
    if test -e ${DESTDIR}$file; then
        rm -f ${DESTDIR}$file
    fi
done

exit 0
